//CALCULATOR
#include<iostream>
using namespace std;
int main()
{
    int a , b, result;
    char ch;
    // take user input
    cout<<"\n ENTER THE 1ST  NUMBER:";
    cin>>a;
    cout<<"\n ENTER THE OPERATION WANT TO PERFORM:";
    cin>>ch;
     /*1.Addition(+)
    2.subtraction(-)
    3.multiplication(*)
    4.division(/)
    5.modulus(%)*/
    cout<<"\n ENTER THE 2ND NUMBER:";
    cin>>b;
    switch(ch)
    {
        case '+':
        {
           cout<<" result="<<a+b;
            break;
        }
        case '-':
        {
            cout<<"result ="<<a-b;
            break;
        }
        case '*':
        {
           cout<<" result="<<a*b;
            break;
        }
        case '/':
        {
            if(b!=0)
           cout<<" result="<<a/b;
            else
            cout<<"Error! Division by zero are not allowed:";

            break;
        }
        case '%':
        {
            if(b!=0)
           cout<<" result="<<a%b;
            else
            cout<<"Error!:Modulus of zero are not allowed:";
            break;
        }
        default:
        cout<<"(INVALID Oprator:)";
}
return 0;
}
